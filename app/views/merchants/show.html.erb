<p id="notice"><%= notice %></p>

<p>
  <b>Store name:</b>
  <%= @merchant.store_name %>
</p>

<p>
  <b>Street:</b>
  <%= @merchant.street %>
</p>

<p>
  <b>Postal code:</b>
  <%= @merchant.postal_code %>
</p>

<p>
  <b>City:</b>
  <%= @merchant.city %>
</p>

<p>
  <b>Describtion:</b>
  <%= @merchant.describtion %>
</p>

<h2>Members</h2>
<% @merchant.members.each do |member| %>
  <p>
    <b>Name:</b>
    <%= member.name %>
  </p>
 
  <p>
    <b>Email:</b>
    <%= member.email %>
  </p>

  <p>
    <b>Phone number:</b>
    <%= member.phone_number %>
  </p>
<% end %>

<h2>Add a member:</h2>
<%= form_for([@merchant, @merchant.members.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_area :gender %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_merchant_path(@merchant) %> |
<%= link_to 'Back', merchants_path %>
